WindowManager:
    LogInScreen:
    SignUpScreen:

<LogInScreen>:
    id: screen1
    name: 'LogInScreen'

    Image:
        source: 'uua_rainbow_logo.jpg'
        allow_stretch: True
        keep_ratio: False
        
    MDCard:
        size_hint: None, None
        size: 360, 640
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'
        radius: [17, 17, 17, 17]

        Image:
            source: 'Untitled1.jpg'
            size_hint: None, None
            size: 100, 100
            pos_hint: {"center_x": 0.5}

        MDLabel:
            id: welcome_label
            text: "GUUF IT Department"
            font_size: 30
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        BoxLayout:
            orientation: 'vertical'
            spacing: 40

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10 
                
                MDLabel:
                    id: username_label
                    text: "Username"
                    font_size: 18
                    halign: 'left'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15

                MDTextField:
                    id: username_input
                    hint_text: "Username"
                    icon_left: "account"
                    mode: "round"
                    max_text_length: 150
                    width: 200
                    height: 50 
                    size_hint_x: None
                    size_hint_y: None
                    padding_y: 150
                    write_tab: False

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                MDLabel:
                    id: password_label
                    text: "Password"
                    font_size: 18
                    halign: 'left'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15

                MDTextField:
                    id: Password_input
                    hint_text: "Password"
                    icon_right: "eye-off"
                    mode: "round"
                    max_text_length: 150
                    width: 200
                    height: 50 
                    size_hint_x: None
                    size_hint_y: None
                    padding_y: 15
                    password: True
                    on_text:  self.text = self.text.replace(" ", "")
                    write_tab: False
        
        Widget:
            size_hint_y: None
            height: 20

        MDFlatButton:
            id: forgotPassword_button
            text: "Forgot Password"
            size_hint_y: None
            padding_y: 15
            on_press: app.forgotPasswordScreen()
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDRaisedButton:
            id: signUp_button
            text: "Sign Up"
            size_hint_y: None
            padding_y: 15
            size_hint_x: 1
            radius: [19, 19, 19, 19]
            md_bg_color: "gray"
            on_press: app.SignUpScreen()
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
        MDRaisedButton:
            id: submit_button
            text: "Submit"
            size_hint_y: None
            padding_y: 15
            size_hint_x: 1
            radius: [19, 19, 19, 19]
            md_bg_color: "gray"
            on_release: app.check_input()
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<SignUpScreen>
    id: screen2
    name: 'SignUpScreenScreen'

    MDCard:
        size_hint: None, None
        size: 360, 640
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'
        radius: [17, 17, 17, 17]
